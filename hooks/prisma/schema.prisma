generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int   @id @default(autoincrement())
  name  String
  email String
  pass  String
}


model Zap{
  id  String  @id @default(uuid())
  triggerId  String
  trigger Trigger?
}

model Trigger{
  id     String  @id @default(uuid())
  zapId  String @unique
  triggerId String
  type AvalibleTriggers @relation(fields: [triggerId],references: [id])
  zap Zap  @relation(fields: [zapId],references: [id])
}

model AvalibleTriggers{
  id String @id @default(uuid())
  name String
  triggers Trigger[]
}